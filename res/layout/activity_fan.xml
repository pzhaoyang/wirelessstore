            android:text="@string/fan_key8" />

        <Button
            android:id="@+id/fan_key9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_key9" />

        <Button
            android:id="@+id/fan_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_mode" />
    </LinearLayout>

    <LinearLayout
        
