            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_key3" />

        <Button
            android:id="@+id/fan_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_light" />
    </LinearLayout>

    <LinearLayout
        
