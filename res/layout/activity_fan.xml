            android:id="@+id/fan_speedlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_speedlow" />

        <Button
            android:id="@+id/fan_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_volume" />

        <Button
            android:id="@+id/fan_speedhigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_speedhigh" />
    </LinearLayout>

    <LinearLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fan_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:textColor="@color/btntextcolor"
            android:text="@string/fan_shake" />
    </LinearLayout>
