<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cursor_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/listview_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/remote_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@color/btntextcolor"
            android:textSize="40sp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/remote_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@color/btntextcolor"
            android:textSize="40sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >
  <TextView 
            android:id="@+id/remote_type"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:text="码型"
            android:textColor="@color/btntextcolor"
            android:textSize="40sp" />
       
       
         
       
    </LinearLayout>
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >
  <TextView
            android:id="@+id/sample_index"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:text="样本指示"
            android:textColor="@color/btntextcolor"
            android:textSize="40sp" />
      
         <TextView
            android:id="@+id/remote_index"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_normal"
            android:text="码型说明"
            android:textColor="@color/btntextcolor"
            android:textSize="40sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/remote_send"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送"
            android:textSize="40sp"
            android:background="@drawable/btn_normal"
            android:textColor="@color/btntextcolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/freq"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="@color/btntextcolor"
            android:textSize="32sp"
             />

        <TextView
            android:id="@+id/data"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="10"
             android:textColor="@color/btntextcolor"
            android:textSize="32sp"
            />
    </LinearLayout>

</LinearLayout>